                                            <input type="text" placeholder="Product Name" class="form-control input-md" ng-model="item.TEN_HANG">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Maker Code: </label>
                                        <div class="col-md-10">
                                            <select ng-model="item.MA_NHOM_HANG" class="form-control input-md">
                                                <option ng-repeat="abc in danhsachnhomhang" value="{{abc.MA_NHOM_HANG_CHI_TIET}}">{{abc.CHUNG_LOAI_HANG}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Weight: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Weight" class="form-control input-md" ng-model="item.KHOI_LUONG">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Unit: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Unit" class="form-control input-md" ng-model="item.DON_VI_TINH">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Warranty: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Warranty" class="form-control input-md" ng-model="item.BAO_HANH">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Picture: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Picture" class="form-control input-md" ng-model="item.HINH_ANH">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Xuất xứ: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Native Place" class="form-control input-md" ng-model="item.XUAT_XU">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label no-pad-top" for="name">Inventory Account </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Inventory Account" class="form-control input-md" ng-model="item.TK_HACH_TOAN_KHO">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Sale Account: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Sale Account" class="form-control input-md" ng-model="item.TK_DOANH_THU">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">COGS Account </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="COGS Account" class="form-control input-md" ng-model="item.TK_CHI_PHI">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Ghi chú: </label>
                                        <div class="col-md-10">
                                            <textarea id="ghichu" name="ghichu" placeholder="Note" class="form-control input-md" ng-model="item.GHI_CHU"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label ckeditor" for="name">Đóng gói: </label>
                                        <div class="col-md-10 ckeditor">
                                            <textarea id="editdonggoi" name="editdonggoi" placeholder="Đóng gói" class="form-control input-md" ng-model="item.QUY_CACH_DONG_GOI"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label ckeditor" for="name">Thông số: </label>
                                        <div class="col-md-10 ckeditor">
                                            <textarea id="editthongso" name="editthongso" placeholder="Details" class="form-control input-md" ng-model="item.THONG_SO_KY_THUAT"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 help">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Product Code: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Product Code" class="form-control input-md" ng-model="mahang">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <i class="fa fa-question nohelp" aria-hidden="true" onclick="help()"></i>
                                    <i class="fa fa-ban help" aria-hidden="true" onclick="nohelp()"></i>
                                </div>
                                <script>
                                    CKEDITOR.replace('editdonggoi', {
                                        height: 100
                                    });         
                                    CKEDITOR.replace('editthongso', {
                                        height: 100
                                    });
                                </script>
                            </fieldset>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="anmelden"></label>
                            <div class="col-md-8 edit">
                                <button class="btn" ng-click="save(item.MA_HANG)" data-dismiss="modal">Save</button>
                                <button class="btn" data-dismiss="modal">Exit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />   
        <!--end modal-->
        <!-- Modal delete -->
        <div class="modal fade" id="delete_item" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Delete Product</legend>
                                <center>Are you sure you want to delete <b>{{item.TEN_HANG}}</b></center>
                                <p></p>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="delete"></label>
                                    <div class="col-md-8">
                                        <button id="delete" name="delete" class="btn" ng-click="delete(item.MA_HANG)" data-dismiss="modal">Delete</button>
                                        <button id="exit" name="exit" class="btn" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <div class="modal fade" id="chitiethanghoa" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg" style="width:80%;">
                <div class="modal-content" style="height: 600px;">

                    <div class="modal-body">
                        <div class="col-md-3">
                            <img ng-src="~/Content/Images/HangHoa/{{item.HINH_ANH}}" style="width: 100%;height: 250px;" />
                        </div>
                        <div class="col-md-9">
                            <div style="margin-bottom: 5%;" class="col-md-12">
                                <h1>{{item.TEN_HANG | uppercase}}</h1>
                                <div class="col-md-3 detail">Mã hàng: {{item.MA_HANG}}</div>
                                <div class="col-md-2 detail">Hãng: {{item.MA_NHOM_HANG}}</div>
