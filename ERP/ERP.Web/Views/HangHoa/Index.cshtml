

@model IEnumerable<ERP.Web.Models.Database.HH>



@{
    ViewBag.Title = "Index";
}
<meta charset="utf-8">
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<link href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/self-writing/css/HangHoaHL.css" rel="stylesheet" />
<script src="~/Content/download/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="~/Content/download/plugins/ckeditor/ckeditor.js"></script>

<div class="panel-heading">Bạn đang xem danh mục hàng hóa</div>
<br />
<div ng-app="myApp" ng-controller="hanghoaCtrl">
    <div class="content">
        <div id="quick-access">
            <form class="form-inline quick-search-form" role="form" action="#">
                <div class="form-group" style="width: 100%">
                    <input type="text" style="width: 60%" class="form-control" placeholder="Type System Code You Want To Search Here" ng-model="search_text">
