            </form>
        </div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Add New Product</button>
        <br />
        <br />
        <!-- Modal Thêm mới -->
        <div class="modal fade" id="myModal" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg" style="width: 100%">
                <div class="modal-content" style="height: 1350px">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset style="height: 1250px">
                                <!-- Form Name -->
                                <legend>Add New Product</legend>
                                <!-- Text input-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Product Code: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Product Code" class="form-control input-md" ng-model="mahang">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Product Name:</label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Product Name" class="form-control input-md" ng-model="tenhang">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Maker Code: </label>
                                        <div class="col-md-10">
                                            <select ng-model="manhomhang" class="form-control input-md">
                                                <option ng-repeat="abc in danhsachnhomhang" value="{{abc.MA_NHOM_HANG_CHI_TIET}}">{{abc.CHUNG_LOAI_HANG}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Weight: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Weight" class="form-control input-md" ng-model="khoiluong">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Unit: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Unit" class="form-control input-md" ng-model="donvitinh">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Warranty: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Warranty" class="form-control input-md" ng-model="baohanh">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Picture: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Picture" class="form-control input-md" ng-model="hinhanh">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Xuất xứ: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Native Place" class="form-control input-md" ng-model="xuatxu">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label no-pad-top" for="name">Inventory Account </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Inventory Account" class="form-control input-md" ng-model="tkhachtoankho">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Sale Account: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Sale Account" class="form-control input-md" ng-model="tkdoanhthu">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">COGS Account </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="COGS Account" class="form-control input-md" ng-model="tkchiphi">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Ghi chú: </label>
                                        <div class="col-md-10">
                                            <textarea id="ghichu" name="ghichu" placeholder="Note" class="form-control input-md" ng-model="ghichu"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label ckeditor" for="name">Đóng gói: </label>
                                        <div class="col-md-10 ckeditor">
                                            <textarea id="donggoi" name="donggoi" placeholder="Đóng gói" class="form-control input-md" ng-model="quycachdonggoi"></textarea>
                                        </div>
                                    </div>      
                                    <div class="form-group">
                                        <label class="col-md-2 control-label ckeditor" for="name">Thông số: </label>
                                        <div class="col-md-10 ckeditor">
                                            <textarea id="thongso" name="thongso" placeholder="Details" class="form-control input-md" ng-model="thongso"></textarea>
                                        </div>
                                    </div>
                                </div>     
                                <div class="col-md-5 help" >
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Product Code: </label>
                                        <div class="col-md-10">
                                            <input type="text" placeholder="Product Code" class="form-control input-md" ng-model="mahang">
                                        </div>
                                    </div>
                                </div>    
                                <div class="col-md-1">
                                    <i class="fa fa-question nohelp" aria-hidden="true" onclick="help()"></i>
                                    <i  class="fa fa-ban help" aria-hidden="true" onclick="nohelp()"></i>
                                </div>                       
                                <script>
                                    CKEDITOR.replace('donggoi', {
                                        height: 100
                                    });
                                    CKEDITOR.replace('thongso', {
                                        height: 100
                                    });
                                </script>
                                
                            </fieldset>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="anmelden"></label>
                            <div class="col-md-8 addnew">
                                <button id="addnew" name="addnew" class="btn addnewmodal" ng-click="add()" data-dismiss="modal">Add New</button>
                                <button id="exit" name="exit" class="btn addnewmodal" data-dismiss="modal">Exit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <!-- Modal Update -->
        <div class="modal fade" id="myEdit" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg" style="width: 100%">
                <div class="modal-content" style="height: 1350px">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset style="height: 1250px">
                                <!-- Form Name -->
                                <legend>Add New Product</legend>
                                <!-- Text input-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="name">Product Code: </label>
