                                                <table class="table noborder">
                                                    <tr>
                                                        <td>Quy cách đóng gói</td>
                                                        <td ng-bind-html="item.QUY_CACH_DONG_GOI | unsafe"></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Sale Account</td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td>COGS Account</td>
